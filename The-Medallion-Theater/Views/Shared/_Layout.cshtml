    <header>
        <div class="logo">
            <h1>Medallion Theater</h1>
        </div>
        <nav>
            <ul>
                <li><a asp-controller="Home" asp-action="Index" >Home</a></li>
                <li><a asp-controller="Theater" asp-action="BrowsePerformance">Browse performance</a></li>
                <li><a asp-controller="Theater" asp-action="ShowMyTickets">Tickets</a></li>
                @* <li><a asp-controller="Theater" href="#">Contact</a></li> *@
            </ul>
        </nav>

        @if (signInManager.IsSignedIn(User))
        {
            <button class="logout-button"> <a asp-controller="Account" asp-action="Logout">@User.Identity.Name </a></button>
            
        }
        else
        {
            <div class="auth-buttons">
                <button class="login-button"><a asp-controller="Account" asp-action="Loginurl">Login </a> </button>
                <button class="register-button"> <a asp-controller="Account" asp-action="Signup">Register </a> </button>
            </div>
        }

    </header>

    
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Book.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    
